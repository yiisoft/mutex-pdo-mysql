{
    "name": "yiisoft/mutex-db-mysql",
    "type": "library",
    "description": "Yii Mutex Library - MySQL DB Driver",
    "keywords": [
        "yii",
        "mutex"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/yiisoft/mutex-db-mysql",
        "issues": "https://github.com/yiisoft/mutex-db-mysql/issues",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "ext-pdo": "*",
        "yiisoft/mutex": "^3.0@dev"
    },
    "require-dev": {
        "phan/phan": "^3.0",
        "phpunit/phpunit": "^9.4",
        "roave/infection-static-analysis-plugin": "^1.5",
        "spatie/phpunit-watcher": "^1.23",
        "squizlabs/php_codesniffer": "^3.2",
        "vimeo/psalm": "^4.3",
        "yiisoft/cache": "^3.0@dev",
        "yiisoft/composer-config-plugin": "^1.0@dev",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/log": "^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Mutex\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Mutex\\Tests\\": [
                "tests",
                "vendor/yiisoft/mutex/tests"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
